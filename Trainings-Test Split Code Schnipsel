library(caret)

set.seed(1234)
data <- read.csv("BlackFriday.csv")

inTrain <- createDataPartition(
  y = data$Purchase,
  ## Purchase ist dependent Variable
  p = .8, 
  ##  VerhÃ¤ltnis traing - test set
  list = FALSE)
  
training <- data[ inTrain,]
testing  <- data[-inTrain,]

nrow(training)
nrow(testing)

training$Product_ID <- NULL #lÃ¶schen von Product_ID weil sonst Fehlermeldung
testing$Product_ID <- NULL
